{% extends 'DevTRWLbFindBundle::layout.html.twig' %}

{% block body -%}
    <h1>Longboarders in your area</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Username</th>
                <th>Location</th>
                <th>Discipline</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('dev_trw_lb_find_longboarder_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.discipline }}</td>
                <td>{{ entity.age }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('dev_trw_lb_find_longboarder_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('dev_trw_lb_find_longboarder_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('dev_trw_lb_find_longboarder_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

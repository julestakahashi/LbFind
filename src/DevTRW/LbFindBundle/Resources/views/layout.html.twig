<!DOCTYPE html>
<html>
<head>
    <title>
        {% block title %}
            Longboard Buddy Finder
        {% endblock %}
    </title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/devtrwlbfind/css/googlemaps.css') }}" type="text/css" media="all" />
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('bundles/devtrwlbfind/images/favicon.ico') }}" />
</head>
<body>
    {% block javascripts %}
        <script src="{{ asset("bundles/devtrwlbfind/js/googlemaps.js") }}"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCwD1EanByNiHrLQiAwvIYmJJNU2kGCW3Q"></script>
    {% endblock %}
<div id="container">
    <div id="header">
        <div class="content">
            <h1><a href="{{ path('dev_trw_lb_find_longboarder') }}">
                    <img src="{{ asset('bundles/devtrwlbfind/images/doge.png') }}"/>
                </a></h1>

            <div id="sub_header">
                <div class="search">
                    <h2>Search</h2>
                    <form action="" method="get">
                        <input type="text" name="keywords" id="search_keywords" />
                        <input type="submit" value="search" />
                        <div class="help">
                            Enter some keywords (location, discipline, username, age...)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
      <div class="content">
            {% block content %}
            {% endblock %}
        </div>
    </div>
    <div id="map_canvas"></div>
<div class="body">
    {% block body %}
    {% endblock %}
</div>
</div>


</body>
</html>